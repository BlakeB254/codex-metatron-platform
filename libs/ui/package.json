{
  "name": "@codex-metatron/ui",
  "version": "1.0.0",
  "description": "Shared UI library for Codex Metatron Platform with atomic design and sacred geometry principles",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./atoms": {
      "import": "./dist/atoms/index.esm.js",
      "require": "./dist/atoms/index.js",
      "types": "./dist/atoms/index.d.ts"
    },
    "./molecules": {
      "import": "./dist/molecules/index.esm.js",
      "require": "./dist/molecules/index.js",
      "types": "./dist/molecules/index.d.ts"
    },
    "./organisms": {
      "import": "./dist/organisms/index.esm.js",
      "require": "./dist/organisms/index.js",
      "types": "./dist/organisms/index.d.ts"
    },
    "./templates": {
      "import": "./dist/templates/index.esm.js",
      "require": "./dist/templates/index.js",
      "types": "./dist/templates/index.d.ts"
    },
    "./themes": {
      "import": "./dist/themes/index.esm.js",
      "require": "./dist/themes/index.js",
      "types": "./dist/themes/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "atomic-design",
    "sacred-geometry",
    "typescript"
  ],
  "author": "Codex Metatron Platform",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.28.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^8.6.14",
    "tailwindcss": "^3.4.16",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.2"
  }
}
