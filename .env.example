# Codex Metatron Platform - Environment Configuration

# General Configuration
NODE_ENV=development
PLATFORM_NAME="Codex Metatron Platform"

# Database Configuration
# Master database for core server
MASTER_DATABASE_URL=postgresql://username:password@localhost:5432/codex_master
# Auth database for auth service (can be same as master)
AUTH_DATABASE_URL=postgresql://username:password@localhost:5432/codex_auth
# CRM database for CRM service (can be same as master)
CRM_DATABASE_URL=postgresql://username:password@localhost:5432/codex_crm

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-signing-key-change-this-in-production
JWT_EXPIRY=7d

# Service URLs (for internal communication)
# API Gateway
API_GATEWAY_URL=http://localhost:3000
# Core Server
CORE_SERVER_URL=http://localhost:3001
# CRM Service
CRM_SERVICE_URL=http://localhost:3002
# Auth Service
AUTH_SERVICE_URL=http://localhost:3003

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:3000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis Configuration (optional - for service registry)
# REDIS_URL=redis://localhost:6379

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=20

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Service Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Development Configuration
DISABLE_AUTH=false
DEBUG_MODE=false

# Production Configuration (uncomment for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# TRUST_PROXY=true

# Monitoring Configuration (optional)
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=your-datadog-api-key

# Email Configuration (optional - for password resets)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Tenant Configuration
DEFAULT_TENANT_FEATURES=basic,analytics
MAX_TENANTS_PER_ADMIN=10

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs