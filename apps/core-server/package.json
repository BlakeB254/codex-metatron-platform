{
  "name": "core-server",
  "version": "1.0.0",
  "description": "Core API server for Codex Metatron Platform",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
