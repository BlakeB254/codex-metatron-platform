# CDXPharaoh Dashboard Environment Configuration
# Copy this file to .env.local and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_GATEWAY=http://localhost:3000

# Authentication
VITE_JWT_EXPIRY=7d

# Feature Flags
VITE_ENABLE_DEVELOPMENT_TOOLS=true
VITE_ENABLE_DEBUG_MODE=true

# Refresh Intervals (in milliseconds)
VITE_HEALTH_CHECK_INTERVAL=30000
VITE_DASHBOARD_REFRESH_INTERVAL=30000

# Branding
VITE_APP_NAME=CDXPharaoh
VITE_APP_VERSION=1.0.0

# Development Settings
VITE_MOCK_DATA=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Theme Configuration
VITE_THEME=dark
VITE_PRIMARY_COLOR=#F59E0B

# Chart and Visualization
VITE_CHART_THEME=dark
VITE_ENABLE_ANIMATIONS=true

# Notifications
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_TIMEOUT=5000

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=true
VITE_SENTRY_DSN=your-sentry-dsn-here

# Development Override (for testing)
VITE_OVERRIDE_AUTH=false